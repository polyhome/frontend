{
	"name": "frontend",
	"version": "0.1.0",
	"description": "Angular frontend for PolyHome",
	"author": {
		"name": "Kasper Siig",
		"email": "kasper@polyhome.io"
	},
	"license": "GPL-3.0-or-later",
	"homepage": "https://polyhome.io",
	"bugs": "https://github.com/polyome/frontend/issues",
	"repository": {
		"type": "git",
		"url": "https://github.com/polyhome/frontend"
	},
	"scripts": {
		"ng": "ng",
		"serve": "ng serve --host 0.0.0.0",
		"build": "ng build",
		"buildprod": "ng build --prod",
		"lint": "ng lint",
		"test:unit": "jest --coverage",
		"test:watch": "jest --watch",
		"codecov": "codecov"
	},
	"private": true,
	"dependencies": {
		"@angular/animations": "^8.1.3",
		"@angular/cdk": "^8.1.2",
		"@angular/common": "~8.1.2",
		"@angular/compiler": "~8.1.2",
		"@angular/core": "~8.1.2",
		"@angular/forms": "~8.1.2",
		"@angular/material": "^8.1.2",
		"@angular/platform-browser": "~8.1.2",
		"@angular/platform-browser-dynamic": "~8.1.2",
		"@angular/router": "~8.1.2",
		"@mdi/angular-material": "^3.8.95",
		"@mdi/font": "^3.8.95",
		"@ngxs/router-plugin": "^3.5.0",
		"@ngxs/store": "^3.5.0",
		"@ngxs/websocket-plugin": "^3.5.0",
		"hammerjs": "^2.0.8",
		"rxjs": "~6.4.0",
		"tslib": "^1.9.0",
		"zone.js": "~0.9.1"
	},
	"devDependencies": {
		"@angular-builders/custom-webpack": "^8.1.0",
		"@angular-devkit/build-angular": "~0.801.2",
		"@angular/cli": "~8.1.2",
		"@angular/compiler-cli": "~8.1.2",
		"@angular/language-service": "~8.1.2",
		"@types/jest": "^24.0.18",
		"@types/node": "~8.9.4",
		"codecov": "^3.7.1",
		"codelyzer": "^5.0.0",
		"jest": "^24.9.0",
		"jest-preset-angular": "^7.1.1",
		"protractor": "~5.4.0",
		"ts-node": "~7.0.0",
		"tslint": "~5.15.0",
		"typescript": "~3.4.3"
	},
	"jest": {
		"preset": "jest-preset-angular",
		"setupFilesAfterEnv": [
			"<rootDir>/setupJest.ts"
		],
		"globals": {
			"ts-jest": {
				"tsConfig": "<rootDir>/tsconfig.spec.json",
				"stringifyContentPathRegex": "\\.html$",
				"astTransformers": [
					"<rootDir>/node_modules/jest-preset-angular/InlineHtmlStripStylesTransformer"
				]
			}
		}
	}
}
